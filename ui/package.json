{
  "name": "@pangolinjs/ui",
  "private": true,
  "scripts": {
    "dev": "WEBPACK_BUILD=modern webpack --mode development --watch",
    "build": "npm run build:legacy && npm run build:modern && npm run build:purgecss",
    "build:legacy": "NODE_ENV=production WEBPACK_BUILD=legacy webpack --mode production",
    "build:modern": "NODE_ENV=production WEBPACK_BUILD=modern webpack --mode production",
    "build:purgecss": "purgecss --config purgecss.config.js --output dist/pangolin"
  },
  "dependencies": {
    "@mdi/js": "^5.9.55",
    "core-js": "^3.16.1",
    "deepdash-es": "^5.3.9",
    "ky": "^0.28.5",
    "sockette": "^2.0.6",
    "vue": "^2.6.14",
    "vue-router": "^3.5.2",
    "vuetify": "^2.5.8",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "cssnano": "^5.0.7",
    "mini-css-extract-plugin": "^2.2.0",
    "postcss-loader": "^6.1.1",
    "purgecss": "^4.0.3",
    "sass-loader": "^12.1.0",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.2",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0"
  }
}
