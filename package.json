{
  "name": "front-end-styleguide",
  "version": "4.0.0-alpha.1",
  "description": "Pattern library framework for styleguide driven front end development with Sass, ES6+ and Nunjucks.",
  "keywords": [
    "babel",
    "css",
    "es6",
    "front end",
    "html",
    "javascript",
    "nunjucks",
    "pattern library",
    "sass",
    "styleguide",
    "webpack"
  ],
  "author": {
    "name": "Fynn Becker",
    "email": "info@fynn-becker.de"
  },
  "homepage": "https://front-end-style.guide",
  "repository": {
    "type": "git",
    "url": "https://github.com/front-end-styleguide/core"
  },
  "bugs": {
    "url": "https://github.com/front-end-styleguide/core/issues",
    "email": "info@fynn-becker.de"
  },
  "scripts": {
    "lint": "stylelint \"**/*.?(s)css\" --syntax scss && eslint \"**/*.js\"",
    "pretest": "npm run lint",
    "test": "cd test && nyc ava",
    "test:dev": "cd test && node ../bin/front-end-styleguide.js dev",
    "test:build": "cd test && node ../bin/front-end-styleguide.js build",
    "test:build:dev": "cd test && node ../bin/front-end-styleguide.js build:dev"
  },
  "bin": "bin/front-end-styleguide.js",
  "dependencies": {
    "babel-loader": "^7.1.2",
    "chalk": "^2.1.0",
    "chokidar": "^1.7.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.7",
    "eslint-loader": "^1.9.0",
    "event-source-polyfill": "^0.0.9",
    "express": "^4.15.5",
    "extract-text-webpack-plugin": "^3.0.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "fs-extra": "^4.0.2",
    "get-port": "^3.2.0",
    "glob": "^7.1.2",
    "imagemin-webpack-plugin": "^1.5.2",
    "node-sass": "^4.5.3",
    "nunjucks": "^3.0.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint-webpack-plugin": "^0.9.0",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.2",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-core": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.7.2",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-ava": "^4.2.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "nyc": "^11.2.1",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0"
  },
  "peerDependencies": {
