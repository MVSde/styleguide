{
  "name": "@pangolin/core",
  "version": "4.6.0",
  "description": "Framework for componentized front end development with Nunjucks, Sass, and JavaScript",
  "keywords": [
    "babel",
    "css",
    "es6",
    "front end",
    "html",
    "javascript",
    "nunjucks",
    "pattern library",
    "sass",
    "styleguide",
    "webpack"
  ],
  "author": {
    "name": "Fynn Becker",
    "email": "info@fynn-becker.de"
  },
  "homepage": "https://github.com/pangolinjs/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/pangolinjs/core"
  },
  "bugs": {
    "url": "https://github.com/pangolinjs/core/issues",
    "email": "info@fynn-becker.de"
  },
  "scripts": {
    "install": "webpack --config docs/webpack.js --display errors-only",
    "lint": "run-s -n lint:*",
    "lint:js": "eslint --format codeframe \"**/*.js\"",
    "lint:css": "stylelint \"**/*.?(s)css\" --syntax scss --custom-formatter node_modules/stylelint-codeframe-formatter",
    "test:lint": "run-s -n test:lint:*",
    "test:lint:js": "cd test && node ../bin/pangolin lint --js",
    "test:lint:css": "cd test && node ../bin/pangolin lint --css",
    "test:lint:html": "cd test && node ../bin/pangolin lint --html",
    "test": "run-s -n install test:init test:unit test:e2e test:build test:build:dev test:build:proto",
    "test:init": "cd test && npm install",
    "test:unit": "cd test && nyc ava",
    "test:e2e": "cd test && testcafe chrome:headless,firefox:headless test/e2e --app \"node ../bin/pangolin dev\" --app-init-delay 4000",
    "test:dev": "cd test && node ../bin/pangolin dev",
    "test:build": "cd test && node ../bin/pangolin build",
    "test:build:dev": "cd test && node ../bin/pangolin build --dev",
    "test:build:proto": "cd test && node ../bin/pangolin build --proto"
  },
  "bin": "bin/pangolin.js",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "chalk": "^2.3.0",
    "chokidar": "^2.0.0",
    "clipboard": "^2.0.0",
    "copy-webpack-plugin": "^4.3.0",
    "css-loader": "^0.28.7",
    "eslint-loader": "^2.0.0",
    "event-source-polyfill": "^0.0.12",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "fast-glob": "^2.2.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "fs-extra": "^5.0.0",
    "fuse.js": "^3.2.0",
    "imagemin-webpack-plugin": "^2.0.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.7.2",
    "nunjucks": "^3.0.1",
    "opn": "^5.3.0",
    "portfinder": "^1.0.13",
    "postcss-loader": "^2.0.9",
    "prismjs": "^1.9.0",
    "sass-loader": "^7.0.1",
    "showdown": "^1.8.5",
    "style-loader": "^0.20.1",
    "stylelint-codeframe-formatter": "^1.0.4",
    "stylelint-webpack-plugin": "^0.10.1",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.2",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "ava": "^0.25.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-ava": "^4.4.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-testcafe": "^0.2.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "stylelint": "^9.1.1",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^2.2.0",
    "testcafe": "^0.19.0"
  },
  "peerDependencies": {
    "eslint": "^4.19.1",
    "stylelint": "^9.2.0"
  },
  "engines": {
    "node": ">= 8.6.0"
  },
  "license": "GPL-3.0"
}
