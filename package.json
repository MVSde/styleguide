{
  "name": "front-end-styleguide",
  "version": "4.3.0",
  "description": "Pattern library framework for styleguide driven front end development with Sass, ES6+ and Nunjucks.",
  "keywords": [
    "babel",
    "css",
    "es6",
    "front end",
    "html",
    "javascript",
    "nunjucks",
    "pattern library",
    "sass",
    "styleguide",
    "webpack"
  ],
  "author": {
    "name": "Fynn Becker",
    "email": "info@fynn-becker.de"
  },
  "homepage": "https://front-end-style.guide",
  "repository": {
    "type": "git",
    "url": "https://github.com/front-end-styleguide/core"
  },
  "bugs": {
    "url": "https://github.com/front-end-styleguide/core/issues",
    "email": "info@fynn-becker.de"
  },
  "scripts": {
    "install": "webpack --config docs/webpack.js --display errors-only",
    "lint": "run-s -n lint:js lint:css lint:html",
    "lint:js": "eslint \"**/*.js\"",
    "lint:css": "stylelint \"**/*.?(s)css\" --syntax scss",
    "lint:html": "cd test && node ../bin/front-end-styleguide.js lint:html",
    "test": "run-s -n install test:init test:unit test:e2e test:build test:build:dev",
    "test:init": "cd test && npm install",
    "test:unit": "cd test && nyc ava",
    "test:e2e": "cd test && testcafe chrome:headless,firefox:headless test/e2e --app \"node ../bin/front-end-styleguide.js dev\" --app-init-delay 4000",
    "test:dev": "cd test && node ../bin/front-end-styleguide.js dev",
    "test:build": "cd test && node ../bin/front-end-styleguide.js build",
    "test:build:dev": "cd test && node ../bin/front-end-styleguide.js build:dev",
    "test:build:proto": "cd test && node ../bin/front-end-styleguide.js build:proto"
  },
  "bin": "bin/front-end-styleguide.js",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "chalk": "^2.1.0",
    "chokidar": "^1.7.0",
    "clipboard": "^1.7.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.7",
    "eslint-loader": "^1.9.0",
    "event-source-polyfill": "^0.0.11",
    "express": "^4.15.5",
    "extract-text-webpack-plugin": "^3.0.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "fs-extra": "^4.0.2",
    "get-port": "^3.2.0",
    "glob": "^7.1.2",
    "imagemin-webpack-plugin": "^1.5.2",
    "node-sass": "^4.5.3",
    "nunjucks": "^3.0.1",
    "postcss-loader": "^2.0.6",
    "prismjs": "^1.8.1",
    "sass-loader": "^6.0.6",
    "showdown": "^1.7.6",
    "style-loader": "^0.19.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.2",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "ava": "^0.23.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.7.2",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-ava": "^4.2.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-testcafe": "^0.2.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "stylelint": "^8.1.1",
    "stylelint-config-sass-guidelines": "^3.1.0",
    "testcafe": "^0.18.0"
  },
  "peerDependencies": {
    "eslint": "^4.7.2",
    "stylelint": "^8.1.1"
  },
  "engines": {
    "node": ">= 8.6.0"
  },
  "license": "GPL-3.0"
}
