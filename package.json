{
  "name": "@pangolin/core",
  "version": "4.6.0",
  "description": "Framework for componentized front end development with Nunjucks, Sass, and JavaScript",
  "keywords": [
    "babel",
    "css",
    "es6",
    "front end",
    "html",
    "javascript",
    "nunjucks",
    "pattern library",
    "sass",
    "styleguide",
    "webpack"
  ],
  "author": {
    "name": "Fynn Becker",
    "email": "info@fynn-becker.de"
  },
  "homepage": "https://github.com/pangolinjs/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/pangolinjs/core"
  },
  "bugs": {
    "url": "https://github.com/pangolinjs/core/issues",
    "email": "info@fynn-becker.de"
  },
  "files": [
    "bin",
    "docs/dist",
    "docs/templates",
    "lib"
  ],
  "scripts": {
    "prepare": "node docs/build",
    "lint": "run-s lint:*",
    "lint:js": "eslint --format codeframe \"**/*.js\"",
    "lint:css": "stylelint \"**/*.?(s)css\" --syntax scss --custom-formatter node_modules/stylelint-codeframe-formatter",
    "test:lint": "cd test && node ../bin/pangolin lint",
    "test": "run-s install test:init test:unit test:e2e test:build \"test:build --dev\" \"test:build --proto\"",
    "test:init": "cd test && npm install",
    "test:unit": "cd test && ava",
    "test:e2e": "cd test && testcafe chrome:headless,firefox:headless src/**/*.e2e.js --app \"node ../bin/pangolin dev\" --app-init-delay 4000",
    "test:inspect": "cd test && node ../bin/pangolin inspect",
    "test:dev": "cd test && node ../bin/pangolin dev",
    "test:build": "cd test && node ../bin/pangolin build"
  },
  "bin": "bin/pangolin.js",
  "dependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "babel-loader": "^8.0.0-beta.2",
    "chalk": "^2.3.0",
    "chokidar": "^2.0.0",
    "copy-webpack-plugin": "^4.3.0",
    "css-loader": "^0.28.7",
    "eslint-loader": "^2.0.0",
    "fast-glob": "^2.2.1",
    "file-loader": "^1.1.11",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^6.0.0",
    "gray-matter": "^4.0.1",
    "imagemin-webpack-plugin": "^2.0.0",
    "javascript-stringify": "^1.6.0",
    "koa-mount": "^3.0.0",
    "koa-static": "^4.0.2",
    "mini-css-extract-plugin": "^0.4.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.7.2",
    "nunjucks": "^3.0.1",
    "opn": "^5.3.0",
    "portfinder": "^1.0.13",
    "postcss-loader": "^2.0.9",
    "prismjs": "^1.14.0",
    "sass-loader": "^7.0.1",
    "showdown": "^1.8.5",
    "style-loader": "^0.21.0",
    "stylelint-codeframe-formatter": "^1.0.4",
    "stylelint-webpack-plugin": "^0.10.1",
    "webpack": "^4.6.0",
    "webpack-chain": "^4.6.0",
    "webpack-hot-middleware": "^2.22.1",
    "webpack-merge": "^4.1.2",
    "webpack-serve": "^0.3.2",
    "webpackbar": "^2.6.1",
    "ws": "^5.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46",
    "autoprefixer": "^8.0.0",
    "ava": "^1.0.0-beta.4",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-ava": "^4.4.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-testcafe": "^0.2.1",
    "npm-run-all": "^4.1.2",
    "stylelint": "^9.1.1",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^3.1.0",
    "testcafe": "^0.19.0"
  },
  "peerDependencies": {
    "eslint": "^4.19.1",
    "stylelint": "^9.2.0"
  },
  "engines": {
    "node": ">= 8.11.1"
  },
  "license": "GPL-3.0"
}
