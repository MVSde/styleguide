{
  "name": "front-end-styleguide",
  "version": "4.9.4",
  "description": "Pattern library framework for styleguide driven front end development with Sass, ES6+ and Nunjucks.",
  "keywords": [
    "babel",
    "css",
    "es6",
    "front end",
    "html",
    "javascript",
    "nunjucks",
    "pattern library",
    "sass",
    "styleguide",
    "webpack"
  ],
  "author": {
    "name": "Fynn Becker",
    "email": "fynn@hey.com"
  },
  "homepage": "https://github.com/pangolinjs/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/pangolinjs/core"
  },
  "bugs": {
    "url": "https://github.com/pangolinjs/core/issues",
    "email": "fynn@hey.com"
  },
  "scripts": {
    "install": "webpack --config docs/webpack.js --display errors-only",
    "lint": "run-s -n lint:js lint:css lint:html",
    "lint:js": "eslint \"**/*.js\"",
    "lint:css": "stylelint \"**/*.?(s)css\" --syntax scss",
    "lint:html": "cd test && node ../bin/front-end-styleguide.js lint:html",
    "test": "run-s -n install test:init test:unit test:e2e test:build test:build:dev test:build:proto",
    "test:init": "cd test && npm install",
    "test:unit": "cd test && nyc ava",
    "test:e2e": "cd test && testcafe chrome:headless,firefox:headless test/e2e --app \"node ../bin/front-end-styleguide.js dev\" --app-init-delay 4000",
    "test:dev": "cd test && node ../bin/front-end-styleguide.js dev",
    "test:build": "cd test && node ../bin/front-end-styleguide.js build",
    "test:build:dev": "cd test && node ../bin/front-end-styleguide.js build:dev",
    "test:build:proto": "cd test && node ../bin/front-end-styleguide.js build:proto"
  },
  "bin": "bin/front-end-styleguide.js",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "chalk": "^2.4.2",
    "chokidar": "^2.1.8",
    "clipboard": "^2.0.6",
    "copy-webpack-plugin": "^4.3.0",
    "css-loader": "^0.28.7",
    "eslint-loader": "^2.2.1",
    "event-source-polyfill": "^1.0.21",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^7.0.1",
    "fuse.js": "^3.6.1",
    "glob": "^7.1.6",
    "imagemin-webpack-plugin": "^2.4.2",
    "node-sass": "^4.14.1",
    "nunjucks": "^3.2.2",
    "open": "^6.4.0",
    "portfinder": "^1.0.28",
    "postcss-loader": "^3.0.0",
    "prismjs": "^1.22.0",
    "sass-loader": "^7.3.1",
    "showdown": "^1.9.1",
    "style-loader": "^0.23.1",
    "stylelint-webpack-plugin": "^0.10.5",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "ava": "^1.4.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-ava": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-testcafe": "*",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "stylelint": "^9.1.1",
    "stylelint-config-sass-guidelines": "^6.2.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.18.0",
    "testcafe": "^1.9.4"
  },
  "peerDependencies": {
    "eslint": "^5.16.0",
    "stylelint": "^10.0.1"
  },
  "engines": {
    "node": ">=8.6 <=12"
  },
  "license": "GPL-3.0"
}
