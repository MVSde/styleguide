<nav class="sg-nav js-sg-nav">
  <ul class="sg-nav__list">

    {% if meta.nav.branding.icon %}
      <li class="sg-nav__item">
        <a href="{{ meta.nav.branding.url or meta.path.toRoot + 'index.html' }}" class="sg-nav__button sg-nav__button--icon" title="{{ meta.nav.branding.title }}" rel="noopener">
          {% include meta.nav.branding.icon %}
        </a>
      </li>
    {% endif %}

    <li class="sg-nav__item">
      <button class="sg-nav__button js-sg-nav-btn">Components</button>
      <ul class="sg-nav__sub-list js-sg-nav-sub">
        {% for page in meta.nav.components %}
          <li class="sg-nav__sub-item">
            <a href="{{ meta.path.toRoot }}{{ page.url }}" class="sg-nav__link{{ " is-active" if page.isActive }}">{{ page.name }}</a>
          </li>
        {% endfor %}
      </ul>
    </li>

    <li class="sg-nav__item">
      <button class="sg-nav__button js-sg-nav-btn">Prototypes</button>
      <ul class="sg-nav__sub-list js-sg-nav-sub">
        {% for page in meta.nav.prototypes %}
          <li class="sg-nav__sub-item">
            <a href="{{ meta.path.toRoot }}{{ page.url }}" class="sg-nav__link{{ " is-active" if page.isActive }}">{{ page.name }}</a>
          </li>
        {% endfor %}
      </ul>
    </li>

    <li class="sg-nav__item" style="display: none;">
      <button class="sg-nav__button js-sg-nav-btn">A11Y</button>
      <ul class="sg-nav__sub-list js-sg-nav-sub">
        <li class="sg-nav__sub-item">
          <button class="sg-nav__link js-sg-a11y-contrast">Contrast Check</button>
        </li>
        <li class="sg-nav__sub-item">
          <button class="sg-nav__link js-sg-a11y-duplicate-id">Duplicate ID</button>
        </li>
        <li class="sg-nav__sub-item">
          <button class="sg-nav__link js-sg-a11y-empty-interactive-elements">Empty interactive elements</button>
        </li>
        <li class="sg-nav__sub-item">
          <button class="sg-nav__link js-sg-a11y-alt">Missing <code>alt</code></button>
        </li>
        <li class="sg-nav__sub-item">
          <button class="sg-nav__link js-sg-a11y-label">Missing <code>label</code></button>
        </li>
      </ul>
    </li>

  </ul>

  <button class="sg-nav__hide-btn js-sg-nav-hide-btn" style="display: none;">
    <svg class="sg-nav__hide-btn-icon sg-nav__hide-btn-icon--close" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
    </svg>
    <svg class="sg-nav__hide-btn-icon sg-nav__hide-btn-icon--show" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
    </svg>
  </button>
</nav>
