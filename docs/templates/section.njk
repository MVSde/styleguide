{% set background_style = 'style="background: ' + background + '"' if background %}
{% set width_style = 'style="width: ' + width + '"' if width %}

<section
  class="pangolin-section"
  {% if title %}id="pangolin_{{ title | replace(r/\W/g, "_") | lower }}"{% endif %}>

  {% if title or description %}
  <header class="pangolin-section__header">

    {% if title %}
    <h2 class="pangolin-section__title">
      <a
        aria-label="Link for {{ title }}"
        class="pangolin-section__title-link"
        href="#pangolin_{{ title | replace(r/\W/g, "_") | lower }}">
        <svg class="pangolin-section__title-icon" height="24" viewBox="0 0 24 24" width="24"><path d="M10.59 13.41c.41.39.41 1.03 0 1.42-.39.39-1.03.39-1.42 0a5.003 5.003 0 0 1 0-7.07l3.54-3.54a5.003 5.003 0 0 1 7.07 0 5.003 5.003 0 0 1 0 7.07l-1.49 1.49c.01-.82-.12-1.64-.4-2.42l.47-.48a2.982 2.982 0 0 0 0-4.24 2.982 2.982 0 0 0-4.24 0l-3.53 3.53a2.982 2.982 0 0 0 0 4.24m2.82-4.24c.39-.39 1.03-.39 1.42 0a5.003 5.003 0 0 1 0 7.07l-3.54 3.54a5.003 5.003 0 0 1-7.07 0 5.003 5.003 0 0 1 0-7.07l1.49-1.49c-.01.82.12 1.64.4 2.43l-.47.47a2.982 2.982 0 0 0 0 4.24 2.982 2.982 0 0 0 4.24 0l3.53-3.53a2.982 2.982 0 0 0 0-4.24.973.973 0 0 1 0-1.42z"/></svg>
      </a>
      {{ title }}
    </h2>
    {% endif %}

    {% if description %}
    <p class="pangolin-section__description">{{ description }}</p>
    {% endif %}

  </header>
  {% endif %}

  <div
    class="pangolin-section__content"
    {{ background_style | safe }}>
    <div
      class="pangolin-section__body"
      {{ width_style | safe }}>
      {{ body }}
    </div>
  </div>

  {% if usage or code %}
  <div class="pangolin-section__switch js-pangolin-section-switch">

    <div class="pangolin-section__switch-header">

      {% if usage %}
      <button
        class="pangolin-section__switch-button js-pangolin-section-switch-button"
        data-switch-to="usage">
        Usage
      </button>
      {% endif %}

      {% if code %}
      <button
        class="pangolin-section__switch-button js-pangolin-section-switch-button"
        data-switch-to="code">
        Code
      </button>
      {% endif %}

    </div>

    <div class="pangolin-section__switch-body">

      {% if usage %}
      <div
        class="pangolin-section__switch-panel js-pangolin-section-switch-panel"
        data-switch-panel="usage">
        <div class="pangolin-section__switch-scroll">
          {{ usage }}
        </div>
      </div>
      {% endif %}

      {% if code %}
      <div
        class="pangolin-section__switch-panel js-pangolin-section-switch-panel"
        data-switch-panel="code">
        <button class="pangolin-section__switch-code-copy js-pangolin-section-copy">Copy</button>
        <div class="pangolin-section__switch-scroll">
          <pre class="pangolin-section__switch-pre"><code class="pangolin-section__switch-code js-pangolin-section-code">{{ code }}</code></pre>
        </div>
      </div>
      {% endif %}

    </div>

  </div>
  {% endif %}

</section>
