{%- if process.env.PANGOLIN_ENV == 'dev' or process.env.PANGOLIN_ENV == 'build:dev' %}
<link rel="stylesheet" href="{{ 'pangolin/styles.css' | relative }}">
{% endif -%}

{%- if process.env.PANGOLIN_ENV == 'build:dev' or process.env.PANGOLIN_ENV == 'build:proto' %}
<link rel="stylesheet" href="{{ 'css/main.css' | relative }}">
{% endif -%}

{%- if process.env.PANGOLIN_ENV == 'dev' or process.env.PANGOLIN_ENV == 'build:dev' %}
<script defer src="{{ 'pangolin/scripts.js' | relative }}"></script>
{% endif -%}

{%- if process.env.PANGOLIN_ENV == 'build:dev' or process.env.PANGOLIN_ENV == 'build:proto' %}
<script defer src="{{ 'js/manifest.js' | relative }}"></script>
<script defer src="{{ 'js/vendor.js' | relative }}"></script>
{% endif -%}

<script defer src="{{ 'js/main.js' | relative }}"></script>
