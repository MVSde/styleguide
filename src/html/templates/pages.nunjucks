<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }}</title>
    {# Styleguide Stylesheet #}
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>

  {# Docs Menu #}
  {%- if docsMenu %}
    <ul class="docs__nav">
      <li class="docs__nav__title">Pages</li>
    {%- for page in pageList %}
      <li class="docs__nav__item"><a href="{{ page }}">{{ page }}</a></li>
    {%- endfor %}

      <li class="docs__nav__title">Components</li>
    {%- for comp in compList %}
      <li class="docs__nav__item"><a href="components/{{ comp }}">{{ comp }}</a></li>
    {% endfor -%}
    </ul>
  {%- endif %}

    {# Page Body #}
    {%- block page_body %} {% endblock %}

    {# Styleguide Scripts #}
    <script src="js/script.js"></script>
  </body>
</html>
