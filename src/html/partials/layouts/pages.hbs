<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  {{#if @file.meta.description}}
    <meta name="description" content="{{@file.meta.description}}">
  {{/if}}
    <title>{{@file.meta.title}}</title>

    <!-- CSS -->
  {{#if displayNav}}
    <link rel="stylesheet" href="{{rel}}css/sg.css?v={{version}}">
  {{/if}}
    <link rel="stylesheet" href="{{rel}}css/styles.css?v={{version}}">
  </head>
  <body>

  {{#if displayNav}}
    <!-- Styleguide Nav -->
    {{> "styleguide/nav"}}
  {{/if}}

    {{{block "body"}}}

    <!-- JS -->
    <script defer src="{{rel}}js/scripts.js?v={{version}}"></script>
  </body>
</html>
