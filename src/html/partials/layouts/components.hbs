<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  {{#if @file.meta.description}}
    <meta name="description" content="{{@file.meta.description}}">
  {{/if}}
    <title>{{@file.meta.title}}</title>

    <!-- CSS -->
    <link rel="stylesheet" href="{{rel}}css/sg.css{{{queryVersion}}}">
    <link rel="stylesheet" href="{{rel}}css/styles.css{{{queryVersion}}}">
  </head>
  <body>

    <!-- Styleguide Nav -->
    {{> "styleguide/nav"}}

    <header class="sg-header">
      <h1 class="sg-header__title">{{@file.meta.title}}</h1>
      <p class="sg-header__description">{{@file.meta.description}}</p>
    </header>

    <main class="sg-body">
      {{{block "body"}}}
    </main>

    <!-- JS -->
    <script defer src="{{rel}}js/scripts.js{{{queryVersion}}}"></script>
  </body>
</html>
